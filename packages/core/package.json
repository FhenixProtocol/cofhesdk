{
  "name": "@cofhesdk/core",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint \"src/**/*.ts*\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "pnpm run test:all",
    "test:node": "vitest --config vitest.config.mts --reporter=verbose",
    "test:browser": "vitest --config vitest.browser.config.mts --reporter=verbose",
    "test:all": "pnpm run test:node --run && pnpm run test:browser --run",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@cofhesdk/eslint-config": "workspace:*",
    "@cofhesdk/tsconfig": "workspace:*",
    "@cofhesdk/chains": "workspace:*",
    "@types/node": "^20.0.0",
    "@vitest/browser": "1.6.0",
    "@vitest/coverage-v8": "1.6.0",
    "eslint": "^8.57.0",
    "playwright": "^1.55.0",
    "tsup": "^8.0.2",
    "typescript": "5.5.4",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "idb-keyval": "^6.2.1",
    "immer": "^10.1.1",
    "zustand": "^5.0.1",
    "zod": "^3.22.0",
    "viem": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
