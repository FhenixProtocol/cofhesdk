{
	"name": "@cofhesdk/adapters",
	"version": "0.0.0",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"license": "MIT",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsup src/index.ts --format esm,cjs --dts",
		"dev": "tsup src/index.ts --format esm,cjs --watch --dts",
		"lint": "eslint \"src/**/*.ts*\"",
		"type-check": "tsc --noEmit",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
	},
	"devDependencies": {
		"@cofhesdk/tsconfig": "workspace:*",
		"eslint": "^8.57.0",
		"@cofhesdk/eslint-config": "workspace:*",
		"tsup": "^8.0.2",
		"typescript": "5.5.4",
		"ethers5": "npm:ethers@^5.7.2",
		"ethers6": "npm:ethers@^6.13.0",
		"hardhat": "^2.19.0",
		"@nomicfoundation/hardhat-ethers": "^3.0.0"
	},
	"dependencies": {
		"viem": "^2.0.0"
	},
	"peerDependencies": {
		"@wagmi/core": "^2.0.0",
		"ethers": "^5.0.0 || ^6.0.0",
		"hardhat": "^2.0.0",
		"@nomicfoundation/hardhat-ethers": "^3.0.0"
	},
	"peerDependenciesMeta": {
		"@wagmi/core": {
			"optional": true
		},
		"ethers": {
			"optional": true
		},
		"hardhat": {
			"optional": true
		},
		"@nomicfoundation/hardhat-ethers": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
