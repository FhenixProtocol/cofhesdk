{
  "name": "@cofhesdk/permits",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint \"src/**/*.ts*\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@cofhesdk/eslint-config": "workspace:*",
    "@cofhesdk/tsconfig": "workspace:*",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@vitest/coverage-v8": "1.1.0",
    "eslint": "^8.57.0",
    "happy-dom": "^15.0.0",
    "prettier": "3.2.5",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.2",
    "typescript": "5.5.4",
    "vitest": "1.6.0"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "tweetnacl": "^1.0.3",
    "zod": "^3.22.0",
    "zustand": "^5.0.1"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
