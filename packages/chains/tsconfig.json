{
	"extends": "@cofhesdk/tsconfig/base.json",
	"compilerOptions": {
		"lib": ["ES2017", "DOM"],
		"target": "ES2017",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "build", "node_modules", "test"]
}
